{
  "name": "ui-playground",
  "version": "0.1.0",
  "description": "a playground for experimenting with a ui-core component library",
  "main": "server.js",
  "scripts": {
    "build": "webpack --config webpack.prod.config.js --display-error-details",
    "dev": "webpack-dev-server --hot --inline",
    "lint": "eslint --ext .js,.jsx src/**; exit 0",
    "lint:fix": "eslint --ext .js,.jsx src/**  --fix",
    "lint:watch": "esw -w --ext .js,.jsx src/**",
    "start": "npm run build && NODE_ENV=production node server.js",
    "test": "mocha --compilers js:babel-core/register ./test/**/*.spec.js --require ignore-styles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "enzyme": "^2.8.1",
    "expect": "^1.20.2",
    "express": "^4.15.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-watch": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "ignore-styles": "^5.0.1",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^3.8.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
