{
  "name": "ui-playground",
  "version": "0.1.0",
  "description": "a playground for experimenting with a ui-core component library",
  "main": "server.js",
  "scripts": {
    "build": "webpack -p --config webpack.prod.config.js --display-error-details  --mode production",
    "build:dev": "webpack --config webpack.dev.config.js --display-error-details  --mode development",
    "dev": "webpack-dev-server --hot --inline --config webpack.dev.config.js --mode development",
    "lint": "eslint --ext .js,.jsx src/**; exit 0",
    "lint:fix": "eslint --ext .js,.jsx src/**  --fix",
    "lint:watch": "esw -w --ext .js,.jsx src/**",
    "start": "npm run build && NODE_ENV=production node server.js",
    "test": "mocha --compilers js:babel-core/register ./test/**/*.spec.js --require ignore-styles"
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "ui-core": "^0.1.0"
  },
  "dependencies": {
    "antd": "^3.4.3",
    "enumify": "^1.0.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-import": "^1.7.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^3.1.4",
    "expect": "^22.4.3",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.4",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.3.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-merge": "^4.1.2"
  }
}
